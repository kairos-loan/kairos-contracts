{
  "name": "kairos-loan-contracts",
  "version": "0.1.0",
  "scripts": {
    "test": "forge test",
    "build": "forge build",
    "lint": "solhint 'contracts/**/*.sol'",
    "tenderly-deploy": "npx hardhat run script/deploy.ts --network goerli",
    "prettify": "prettier --write 'contracts/**/*.sol'",
    "local-deploy": "forge script contracts/script/Deploy.s.sol -f http://localhost:8545 --broadcast --private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80",
    "deploy-mocks": "export $(grep -v '^#' .env | xargs) && forge script contracts/script/DeployNftAndMoney.s.sol -vvvv --chain 420 --verify --rpc-url $GOERLI_URL --broadcast"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0",
    "diamond": "https://github.com/mudgen/diamond-1-hardhat",
    "ds-test": "https://github.com/dapphub/ds-test",
    "forge-std": "https://github.com/foundry-rs/forge-std",
    "solmate": "^6.5.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@tenderly/hardhat-tenderly": "^1.3.2",
    "@types/node": "*",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-rc.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}