{
  "name": "@kairos-loan/contracts",
  "version": "0.1.0",
  "scripts": {
    "build": "yarn build:foundry",
    "build:foundry": "forge build --extra-output-files abi",
    "build:hardhat": "hardhat compile",
    "start": "anvil --silent --block-time 1 > out/anvil-logs.txt & yarn deploy:local &",
    "lint": "solhint './src/**/*.sol ./scripts/sol/**/*.sol' -c ../../.solhint.json && eslint ./scripts/ts/**/*.ts",
    "lint:fix": "solhint './src/**/*.sol ./scripts/sol/**/*.sol' -c ../../.solhint.json --fix && eslint ./scripts/ts/**/*.ts --fix",
    "prettify": "prettier --write ./**/*.sol ./scripts/ts/**/*.ts",
    "test": "forge test",
    "slither": "sh scripts/sh/slither.sh",
    "opensource": "cd ../.. && git subtree push --prefix packages/contracts git@github.com:kairos-loan/kairos-contracts.git main",
    "generate:doc": "forge doc --build",
    "generate:coverage": "forge coverage --report lcov",
    "deploy:local": "cross-env $(grep -v '^#' .env | xargs) && forge script ./scripts/sol/DeployLocal.s.sol -f http://localhost:8545 --broadcast --private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80",
    "deploy:prod": "hardhat run scripts/ts/deployKairos.ts",
    "deploy-tokens:goerli": "export $(grep -v '^#' .env | xargs) && forge script scripts/sol/deploy/DeployNftAndMoney.s.sol -vvvv --chain 420 --verify --rpc-url $GOERLI_URL --broadcast",
    "deploy-tokens:prod": "hardhat run scripts/ts/deployNftAndMoney.ts"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0",
    "diamond": "https://github.com/mudgen/diamond-1-hardhat",
    "dotenv": "^16.0.3",
    "ds-test": "https://github.com/dapphub/ds-test",
    "ethers": "^5.7.2",
    "forge-std": "https://github.com/foundry-rs/forge-std#master",
    "solmate": "^6.5.0"
  },
  "packageManager": "yarn@3.3.1"
}
