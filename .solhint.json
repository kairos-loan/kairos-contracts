{
  "extends": "solhint:recommended",
  "rules": {
    "max-line-length": [
      "error",
      120
    ],
    "function-max-lines": [
      "error",
      35
    ],
    "code-complexity": [
      "warn",
      7
    ],
    "ordering": "error",
    "compiler-version": [
      "error",
      "0.8.15"
    ],
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ]
  }
}